<%= cache(cache_digest(@playlists)) do %>
  <div id="playlists_home">
    <ul>
      <% @playlists.each do |playlist| %>
        <li>
        	<%= link_to user_playlist_path(playlist.user.login, playlist) do %>
            <%= image_tag(playlist.cover(:album), :alt => "#{playlist.title} by #{playlist.user.name}") %><br>
        	  <%= link_to truncate(playlist.user.name, :length => 20), user_playlist_path(playlist.user.login, playlist) %><br>
            <%= link_to truncate(playlist.title, :length => 20), user_playlist_path(playlist.user.login, playlist), :title => "#{playlist.title} by #{playlist.user.name}" %>
          <% end %>
        </li>
      
      <% end %>
    </ul>
  </div>
<% end %>