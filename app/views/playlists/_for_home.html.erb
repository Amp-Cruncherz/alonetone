<%= cache(cache_digest(@playlists)) do %>
  <div id="playlists_home">
    <ul>
      <% @playlists.each do |playlist| %>
        <li>
        	<%= link_to user_playlist_path(playlist.user.login, playlist), :title => "#{playlist.title} by #{playlist.user.name}" do %>
            <div>
              <%= image_tag(playlist.cover(:album), :alt => "#{playlist.title} by #{playlist.user.name}") %>
            </div>
            <div class="playlists_home_title">
              <%= link_to truncate(playlist.title, :length => 26), user_playlist_path(playlist.user.login, playlist), :title => "#{playlist.title} by #{playlist.user.name}" %>
            </div>
            <div class="playlists_home_user">
              <%= link_to truncate(playlist.user.name, :length => 26), user_playlist_path(playlist.user.login, playlist) %>
            </div>            
          <% end %>
        </li>
      
      <% end %>
    </ul>
  </div>
<% end %>