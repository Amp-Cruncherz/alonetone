    <fb:share-button class="meta">
      <meta name="medium" content="audio"/>
      <meta name="title" content="<%= object.name %>"/>
      <link rel="image_src" href="<%= image_path object.user.avatar(:small) %>" />
      <link rel="audio_src" href="<%= formatted_user_track_url(object.user, object, :mp3, :referer=>'facebook', :canvas => false) %>" />
      <link rel="target_url" href="<%= user_home_url(object.user)%>" />
      <meta name="audio_type" content="application/mp3" />
      <meta name="description" content="<%=object.description %>"/>
      <meta name="audio_title" content="<%= object.name %>" />
      <meta name="audio_artist" content="<%= object.user.name %>" />
    </fb:share-button>
