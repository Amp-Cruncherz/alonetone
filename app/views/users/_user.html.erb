<div id="user_header">

  <%= link_to(image_tag(@user.avatar(:large), :class => 'small_avatar'), profile_path(@user), :class => 'image', :id=>'alonetoner') %>
  
  <div class="user_title">
    <h1 class="user"><%=h @user.name %></h1><span class="user_location"><%= user_location(@user) %></span>

  </div>
    <% if authorized? %>
      <%= link_to 'edit your profile', edit_user_path(@user), :class => 'edit' %>
    <% end %>
  <div id="user_links">
    <ul class="user_links">
     <%= user_nav_item "Latest", user_home_path(@user) %>
     <%= user_nav_item "Albums & Playlists", user_playlists_path(@user) if @user.has_public_playlists? %>
     <%= user_nav_item "Tracks", user_tracks_path(@user) if @user.assets_count > 0 %>
     <%= user_nav_item "Profile", profile_path(@user) if @user.bio %>
  
      <%= user_nav_item "Email", "mailto://#{@user.email}","contact" if admin? %>
      <%= user_nav_item "Myspace", "http://myspace.com/#{@user.myspace}","contact" if @user.present?(:myspace)%>
      <%= user_nav_item "iTunes", "http://#{@user.itunes}","contact" if @user.present?(:itunes) %>
      <%= user_nav_item "Sudo", sudo_user_path(@user),"contact" if (admin? || @sudo)%>   
    </ul>
  </div>
</div>
  <%= yield %>