<%= form_for @user_session do |f| %>
<p>
  <%= f.label :login %><br />
  <%= f.text_field :login %>
</p>

<div id="password_fields">
<p>
  <%= f.label :password %><br/>
  <%= f.password_field :password %>
</p>

</div>

<p><%= submit_tag 'Login'%></p>
<% end -%>
<%= link_to "Forgot Your Password?", "#reset-password", :class => "slide_open_href" %>

<% form_tag users_path, :id => 'reset-password', :style => 'display:none' do -%>
    <label for="email"><%= 'Enter the email address you signed up with' %></label><br />
    <%= text_field 'email','' %>
    <%= submit_tag 'Send Me An Email so I can login again!'%>
<hr />
<% end -%>


