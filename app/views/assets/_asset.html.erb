<% id = "asset_#{asset.unique_id}-#{rand(1000)}" %>
<% content_tag :div, :id => id, :class => 'asset ' + cycle('odd', 'even') do %>
  <% cache(asset.cache_key+'layout') do %>
    <% render :layout => 'assets/asset_layout', :locals => {:asset => asset, :referer => (@referer) } do %>
       <%= link_to h(asset.user.name), user_home_path(asset.user), :class => 'artist', :title => "#{h(asset.user.name)} on alonetone " %>
    <% end %>
  <% end %>
<% end %>

 <% cache(asset.cache_key+'tabspartial') do %>
 <%= render :partial => 'assets/asset_tabs', :locals => {:asset => asset, :id => id} unless @single_track %>
 <% end %>